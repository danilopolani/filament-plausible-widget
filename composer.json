{
    "name": "danilopolani/filament-plausible-widget",
    "description": "Plausible widget for Filament admin dashboard",
    "keywords": [
        "danilopolani",
        "filament",
        "filament-admin",
        "plausible",
        "filament-plausible-widget"
    ],
    "homepage": "https://github.com/danilopolani/filament-plausible-widget",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Danilo Polani",
            "email": "danilo.polani@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "filament/filament": "^2.5",
        "illuminate/http": "^8.0|^9.0|^10.0",
        "illuminate/support": "^8.0|^9.0|^10.0",
        "livewire/livewire": "^2.6"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "DaniloPolani\\FilamentPlausibleWidget\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DaniloPolani\\FilamentPlausibleWidget\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "DaniloPolani\\FilamentPlausibleWidget\\WidgetServiceProvider"
            ]
        }
    }
}
